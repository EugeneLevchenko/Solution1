@page
@model WebApplication1.Pages.Lots.IndexModel
@{
    ViewData["Title"] = "Lots";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f7fa;
        margin: 0;
        padding: 20px;
    }

    h1 {
        color: #2c3e50;
        text-align: center;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        background-color: #ffffff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
    }

        .table th, .table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #eee;
        }

        .table th {
            background-color: #3498db;
            color: white;
        }

        .table tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        .table tr:hover {
            background-color: #e9ecef;
        }
    p {
        color: #7f8c8d;
        text-align: center;
    }
</style>

<h1>Lots</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Auction ID</th>
            <th>Source ID</th>
            <th>Lot No</th>
            <th>Price</th>
            <th>Title</th>
            <th>Description</th>
            <th>URL</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lot in Model.Lots)
        {
            <tr>
                <td>@lot.Id</td>
                <td>@lot.AuctionId</td>
                <td>@lot.SourceId</td>
                <td>@lot.LotNo</td>
                <td>@lot.Price?.ToString("F2")</td>
                <td>@lot.Title</td>
                <td>@lot.Description</td>
                <td><a href="@lot.URL" target="_blank">@lot.URL</a></td>
            </tr>
        }
    </tbody>
</table>